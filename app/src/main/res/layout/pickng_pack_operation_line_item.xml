<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:orientation="vertical"
    android:paddingLeft="@dimen/default_8dp"
    android:paddingRight="@dimen/default_8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/picking_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/default_8dp">

            <TextView
                android:id="@+id/edtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_normal"
                android:textColor="@color/body_text_1"
                android:textSize="@dimen/text_size_large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:divider="?android:attr/dividerHorizontal"
                        android:orientation="horizontal"
                        android:showDividers="middle">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/default_8dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_condensed"
                                android:text="Хэмжих нэгж"
                                android:textAllCaps="true"
                                android:textColor="@color/body_text_3"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/edtProductUom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/body_text_2"
                                android:textSize="@dimen/text_size_medium" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/default_8dp"
                            android:layout_marginRight="@dimen/default_8dp"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_condensed"
                                android:text="Захиалсан"
                                android:textAllCaps="true"
                                android:textColor="@color/body_text_3"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/edtProductOrderQty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/body_text_2"
                                android:textSize="@dimen/text_size_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/default_8dp"
                            android:layout_marginRight="@dimen/default_8dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_condensed"
                                android:text="Хийх"
                                android:textAllCaps="true"
                                android:textColor="@color/body_text_3"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/edtProductQty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/body_text_2"
                                android:textSize="@dimen/text_size_small" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Бар код: " />

                        <TextView
                            android:id="@+id/txtBarCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_8dp"
                    android:layout_marginRight="@dimen/default_8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_condensed"
                        android:text="Хийгдсэн"
                        android:textAllCaps="true"
                        android:textColor="@color/body_text_3"
                        android:textSize="@dimen/text_size_small" />

                    <EditText
                        android:id="@+id/edtProductQtyDone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:inputType="numberDecimal"
                        android:textColor="@color/body_text_2"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switchButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="0.9"
                        android:checked="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>